<?xml version='1.0' encoding='UTF-8'?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/1.1.3
          http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>assembly</id>
    <baseDirectory>hdpetl-${project.version}</baseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../gateway/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../dataservice-common/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-chatbot/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-config/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-roc/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-search/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../gateway/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*gateway.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../dataservice-common/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*common.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-chatbot/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*quoto-chatbot.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-chatbot/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*quoto-chatbot.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-config/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*quoto-config.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-roc/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*quoto-roc.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../quoto-search/src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*quoto-search.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../script/db</directory>
            <outputDirectory>db</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../script/sbin</directory>
            <outputDirectory>sbin</outputDirectory>
        </fileSet>
    </fileSets>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>bigdata-dataservice:gateway</include>
                <include>bigdata-dataservice:quoto-chatbot</include>
                <include>bigdata-dataservice:quoto-config</include>
                <include>bigdata-dataservice:quoto-roc</include>
                <include>bigdata-dataservice:quoto-search</include>
                <include>bigdata-dataservice:dataservice-common</include>
            </includes>
        </moduleSet>
    </moduleSets>
</assembly>